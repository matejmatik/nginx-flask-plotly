{% macro form_field(field, mode='read') %}
    {{ field.label }}
    {% if mode == 'read' %}
        {{ field(class="form-control", readonly="readonly") }}
    {% else %}
        {{ field(class="form-control") }}
    {% endif %}
    {% if field.errors %}
        <ul class=errors>
        {% for error in field.errors %}
            <li>{{ error }}</li>
        {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}